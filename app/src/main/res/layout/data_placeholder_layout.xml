<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ivProduct"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:background="@color/shimmerBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvPrice"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/shimmerBackground"
        android:text="Rs.435"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProduct" />

    <View
        android:id="@+id/tvName"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@color/shimmerBackground"
        android:text="@string/american_garden_peanut_butter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />


    <View
        android:id="@+id/tvCategory"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/shimmerBackground"
        android:text="@string/mens_clothing"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/ivProductRight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:background="@color/shimmerBackground"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvPriceRight"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/shimmerBackground"
        android:text="Rs.435"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/ivProduct" />

    <View
        android:id="@+id/tvNameRight"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@color/shimmerBackground"
        android:text="@string/american_garden_peanut_butter"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />


    <View
        android:id="@+id/tvCategoryRight"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@color/shimmerBackground"
        android:text="@string/mens_clothing"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />


</androidx.constraintlayout.widget.ConstraintLayout>